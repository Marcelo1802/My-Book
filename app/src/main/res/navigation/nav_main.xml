<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.book.ui.main.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_carDetailsFragment"
            app:destination="@id/carDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/carDetailsFragment"
        android:name="com.example.book.ui.main.book.BookDetailsFragment"
        android:label="fragment_car_details"
        tools:layout="@layout/fragment_car_details" >
        <argument
            android:name="idBook"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/navigation_my_books"
        android:name="com.example.book.ui.main.my_books.MyBooksFragment"
        android:label="fragment_solicitation"
        tools:layout="@layout/fragment_my_books" >
        <action
            android:id="@+id/action_navigation_my_books_to_newBookFragment"
            app:destination="@id/newBookFragment" />
        <action
            android:id="@+id/action_navigation_my_books_to_carDetailsFragment"
            app:destination="@id/carDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/newBookFragment"
        android:name="com.example.book.ui.main.book.NewBookFragment"
        android:label="fragment_new_book"
        tools:layout="@layout/fragment_new_book" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.book.ui.main.home.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/sair_from_login"
            app:destination="@id/loginFragment2" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment2"
        android:name="com.example.book.ui.account.login.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />


</navigation>