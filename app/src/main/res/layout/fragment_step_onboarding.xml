<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:paddingBottom="30dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.init.onboarding.StepOnboardingFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/description_step"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@string/description_lorem"
        android:fontFamily="@font/roboto_bold"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginHorizontal="30dp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_step"
        android:layout_width="0dp"
        android:layout_height="400dp"
        tools:src="@drawable/onbording_s3"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/description_step"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>